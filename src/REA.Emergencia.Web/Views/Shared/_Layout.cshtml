<!DOCTYPE html>
@inject REA.Emergencia.Web.Services.IAppSettingsService AppSettingsService
<html lang="pt-PT">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rede Emergência</title>
    @{
        var selectedTheme = await AppSettingsService.GetValueAsync(REA.Emergencia.Web.Models.AppSettingKeys.SiteTheme, Context.RequestAborted);
        var bootstrapThemeUrl = REA.Emergencia.Web.Models.AppThemeCatalog.ResolveThemeUrl(selectedTheme);
        var isExternalTheme = bootstrapThemeUrl.StartsWith("http://", StringComparison.OrdinalIgnoreCase)
            || bootstrapThemeUrl.StartsWith("https://", StringComparison.OrdinalIgnoreCase);
    }
    @if (isExternalTheme)
    {
        <link rel="stylesheet" href="@bootstrapThemeUrl" />
    }
    else
    {
        <link rel="stylesheet" href="@bootstrapThemeUrl" asp-append-version="true" />
    }
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/REA.Emergencia.Web.styles.css" asp-append-version="true" />
</head>
@{
    var isBackoffice = Context.Request.Path.StartsWithSegments("/backoffice");
    var isEncaminhamento = Context.Request.Path.StartsWithSegments("/encaminhamento");
    var isInternalArea = isBackoffice || isEncaminhamento;
    var isBackofficeHome = Context.Request.Path.Equals("/backoffice", StringComparison.OrdinalIgnoreCase)
        || Context.Request.Path.Equals("/backoffice/", StringComparison.OrdinalIgnoreCase);
}
<body>
    <header>
        @if (!isInternalArea)
        {
            <div class="site-header-image">
                <img src="~/img/header.png" alt="Rede de Emergência Solidária" width="645" height="164"/>
            </div>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="PedidosBens" asp-action="Index">Rede Emergência</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="PedidosBens" asp-action="Index">Início</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="PedidosBens" asp-action="ApoioBens">Pedido de Apoio</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        }
        @if (isInternalArea)
        {
            <div class="site-header-image">
                <img src="~/img/header.png" alt="Rede de Emergência Solidária" width="645" height="164" />
            </div>
            <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom mb-3">
                <div class="container-fluid">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            @if (isBackoffice)
                            {
                                <a class="nav-link text-dark" asp-controller="Backoffice" asp-action="Index">Voltar ao Menu Backoffice</a>
                            }
                            @if (isEncaminhamento)
                            {
                                <a class="nav-link text-dark" asp-area="Encaminhamento" asp-controller="Encaminhamento" asp-action="Index">Voltar ao Menu Encaminhamento</a>
                            }
                        </li>
                        @if (isEncaminhamento)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Backoffice" asp-action="Index">Ir para Backoffice</a>
                            </li>
                        }
                        @if (isBackoffice)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Encaminhamento" asp-controller="Encaminhamento" asp-action="Index">Ir para Encaminhamento</a>
                            </li>
                        }
                    </ul>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        var displayName =
                            User.FindFirst("name")?.Value
                            ?? User.Identity?.Name
                            ?? "Utilizador autenticado";

                        var userUpn =
                            User.FindFirst("preferred_username")?.Value
                            ?? User.FindFirst("upn")?.Value
                            ?? User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value
                            ?? string.Empty;

                        var userLabel = !string.IsNullOrWhiteSpace(userUpn) &&
                                        !string.Equals(displayName, userUpn, StringComparison.OrdinalIgnoreCase)
                            ? $"{displayName} ({userUpn})"
                            : displayName;

                        <div class="d-flex align-items-center gap-2">
                            <span class="text-muted small">@userLabel</span>
                            <form asp-controller="Account" asp-action="SignOutUser" method="post" class="d-flex">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-secondary btn-sm">Terminar sessão</button>
                            </form>
                        </div>
                    }
                </div>
            </nav>
        }
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @if (isBackoffice && !isBackofficeHome)
            {
                <div class="mb-3">
                    <a asp-controller="Backoffice" asp-action="Index" class="btn btn-outline-secondary">Voltar ao Backoffice</a>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - Rede Emergência
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
