@model REA.Emergencia.Web.Models.DistritoFormModel

@{
    ViewData["Title"] = "Novo Distrito";
}

<h1 class="mb-3">Novo Distrito</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <div class="mb-3">
        <label asp-for="Distrito" class="form-label">Distrito</label>
        <input asp-for="Distrito" class="form-control" />
        <span asp-validation-for="Distrito" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Gravar</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
