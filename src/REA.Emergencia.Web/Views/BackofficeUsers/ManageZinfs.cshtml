@model REA.Emergencia.Web.Models.ManageUserZinfsViewModel

@{
    ViewData["Title"] = "Gerir Zonas de Influência";
}

<div class="row">
    <div class="col-lg-10">
        <div class="mb-3">
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Voltar à gestão de utilizadores</a>
        </div>

        <h1 class="mb-3">Gerir Zonas de Influência</h1>
        <p class="text-muted mb-4">
            Utilizador: <strong>@Model.UserPrincipalName</strong>
        </p>

        @if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
        {
            <div class="alert alert-success">@Model.StatusMessage</div>
        }

        @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
        {
            <div class="alert alert-danger">@Model.ErrorMessage</div>
        }

        <div class="card">
            <div class="card-header">ZINFs associadas</div>
            <div class="card-body">
                <form asp-action="ManageZinfs" asp-route-userPrincipalName="@Model.UserPrincipalName" method="post">
                    @Html.AntiForgeryToken()

                    @if (!Model.Zinfs.Any())
                    {
                        <p class="mb-0">Não existem ZINFs configuradas.</p>
                    }
                    else
                    {
                        <div class="row">
                            @for (var i = 0; i < Model.Zinfs.Count; i++)
                            {
                                <div class="col-md-6 mb-2">
                                    <div class="form-check">
                                        <input
                                            class="form-check-input"
                                            type="checkbox"
                                            name="selectedZinfIds"
                                            value="@Model.Zinfs[i].ZinfId"
                                            id="zinf_@Model.Zinfs[i].ZinfId"
                                            @(Model.Zinfs[i].Selected ? "checked" : null) />
                                        <label class="form-check-label" for="zinf_@Model.Zinfs[i].ZinfId">
                                            @Model.Zinfs[i].Nome
                                        </label>
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    <button type="submit" class="btn btn-primary mt-3">Guardar ZINFs</button>
                </form>
            </div>
        </div>
    </div>
</div>
