@model IReadOnlyList<REA.Emergencia.Domain.TipoPedido>

@{
    ViewData["Title"] = "Tipos de Pedido";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Tipos de Pedido</h1>
    <a class="btn btn-primary" asp-action="Create">Novo Tipo de Pedido</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Tabela</th>
            <th>Data Criação (UTC)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.TableName</td>
                <td>@item.CreatedAtUtc.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Detalhe</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
