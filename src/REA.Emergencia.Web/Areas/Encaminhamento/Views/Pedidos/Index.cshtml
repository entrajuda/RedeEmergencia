@model REA.Emergencia.Web.Models.PedidosIndexViewModel

@{
    ViewData["Title"] = "Pedidos";
}

<h1 class="mb-3">Pedidos</h1>

@if (TempData["ErrorMessage"] is string errorMessage && !string.IsNullOrWhiteSpace(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

@if (Model.IsAdmin)
{
    <div class="alert alert-info">
        É administrador e pode ver pedidos de todas as ZINFs.
    </div>
}
else
{
    <div class="alert alert-secondary">
        <strong>ZINFs com acesso:</strong>
        @if (Model.AccessibleZinfs.Any())
        {
            @string.Join(", ", Model.AccessibleZinfs)
        }
        else
        {
            <span>Sem ZINFs atribuídas.</span>
        }
    </div>
}

<form method="get" class="row g-3 align-items-end mb-3">
    <div class="col-md-5">
        <label for="tipoPedidoId" class="form-label">Tipo de Pedido</label>
        <select id="tipoPedidoId" name="tipoPedidoId" class="form-select" asp-items="Model.TipoPedidoOptions">
            <option value="">Todos</option>
        </select>
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary">Filtrar</button>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Data Criação (UTC)</th>
            <th>Estado</th>
            <th>Pedido</th>
            <th>Tipo de Pedido</th>
            <th>ZINF</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pedido in Model.Pedidos)
        {
            <tr>
                <td>@pedido.Id</td>
                <td>@pedido.CreatedAtUtc.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>@pedido.State</td>
                <td>
                    <a asp-area="Encaminhamento" asp-controller="Pedidos" asp-action="Details" asp-route-id="@pedido.Id">Ver detalhes</a>
                </td>
                <td>@pedido.TipoPedidoName</td>
                <td>@pedido.ZinfName</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        (() => {
            const tipoPedidoSelect = document.getElementById("tipoPedidoId");
            if (!tipoPedidoSelect) {
                return;
            }

            tipoPedidoSelect.addEventListener("change", () => {
                tipoPedidoSelect.form?.submit();
            });
        })();
    </script>
}
